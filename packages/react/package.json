{
  "name": "@livepeer/react",
  "description": "React components & hooks for web apps built with Livepeer.",
  "license": "MIT",
  "version": "3.0.11",
  "repository": {
    "type": "git",
    "url": "https://github.com/livepeer/livepeer-react.git",
    "directory": "packages/react"
  },
  "homepage": "https://docs.livepeer.org",
  "main": "dist/livepeer-react.cjs.js",
  "module": "dist/livepeer-react.esm.js",
  "types": "dist/livepeer-react.cjs.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "module": "./dist/livepeer-react.esm.js",
      "default": "./dist/livepeer-react.cjs.js"
    },
    "./components": {
      "module": "./components/dist/livepeer-react-components.esm.js",
      "default": "./components/dist/livepeer-react-components.cjs.js"
    },
    "./contracts": {
      "module": "./contracts/dist/livepeer-react-contracts.esm.js",
      "default": "./contracts/dist/livepeer-react-contracts.cjs.js"
    },
    "./hooks": {
      "module": "./hooks/dist/livepeer-react-hooks.esm.js",
      "default": "./hooks/dist/livepeer-react-hooks.cjs.js"
    }
  },
  "sideEffects": false,
  "files": [
    "client",
    "/components",
    "/context",
    "contracts",
    "hooks",
    "/dist"
  ],
  "preconstruct": {
    "entrypoints": [
      "index.ts",
      "client.ts",
      "components/index.ts",
      "context/index.ts",
      "contracts.ts",
      "hooks.ts"
    ]
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "peerDependenciesMeta": {
    "react-dom": {
      "optional": true
    }
  },
  "dependencies": {
    "@livepeer/core-react": "^2.0.10",
    "@livepeer/core-web": "^3.0.11",
    "@radix-ui/react-dialog": "^1.0.4",
    "@radix-ui/react-popover": "^1.0.6",
    "@radix-ui/react-select": "^1.2.2",
    "@stitches/react": "^1.2.8",
    "core-js": "^3.31.1",
    "zustand": "^4.3.9"
  },
  "devDependencies": {
    "@tanstack/react-query": "4.29.23",
    "@testing-library/react": "^14.0.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "keywords": [
    "dapps",
    "eth",
    "ethereum",
    "hooks",
    "livepeer",
    "react",
    "streaming",
    "video",
    "web3"
  ]
}
