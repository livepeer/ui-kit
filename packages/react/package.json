{
  "name": "@livepeer/react",
  "description": "React primitives for video apps.",
  "license": "MIT",
  "version": "4.2.0-next.6",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/livepeer/ui-kit.git",
    "directory": "packages/react"
  },
  "homepage": "https://docs.livepeer.org",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./assets": {
      "types": "./dist/assets/index.d.ts",
      "import": "./dist/assets/index.js",
      "require": "./dist/assets/index.cjs"
    },
    "./broadcast": {
      "types": "./dist/broadcast/index.d.ts",
      "import": "./dist/broadcast/index.js",
      "require": "./dist/broadcast/index.cjs"
    },
    "./crypto": {
      "types": "./dist/crypto/index.d.ts",
      "import": "./dist/crypto/index.js",
      "require": "./dist/crypto/index.cjs"
    },
    "./external": {
      "types": "./dist/external/index.d.ts",
      "import": "./dist/external/index.js",
      "require": "./dist/external/index.cjs"
    },
    "./player": {
      "types": "./dist/player/index.d.ts",
      "import": "./dist/player/index.js",
      "require": "./dist/player/index.cjs"
    }
  },
  "typesVersions": {
    "*": {
      "assets": [
        "./dist/assets/index.d.ts"
      ],
      "broadcast": [
        "./dist/broadcast/index.d.ts"
      ],
      "crypto": [
        "./dist/crypto/index.d.ts"
      ],
      "external": [
        "./dist/external/index.d.ts"
      ],
      "player": [
        "./dist/player/index.d.ts"
      ],
      "*": [
        "./dist/index.d.ts"
      ]
    }
  },
  "scripts": {
    "build": "tsup",
    "clean": "rimraf .turbo node_modules dist",
    "dev": "tsup --watch",
    "lint": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "peerDependenciesMeta": {
    "react-dom": {
      "optional": true
    }
  },
  "dependencies": {
    "@livepeer/core": "workspace:*",
    "@livepeer/core-react": "workspace:*",
    "@livepeer/core-web": "workspace:*",
    "@radix-ui/primitive": "^1.0.1",
    "@radix-ui/react-aspect-ratio": "^1.0.3",
    "@radix-ui/react-compose-refs": "^1.0.1",
    "@radix-ui/react-context": "^1.0.1",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-portal": "^1.0.4",
    "@radix-ui/react-presence": "^1.0.1",
    "@radix-ui/react-primitive": "^1.0.3",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slider": "^1.1.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-use-controllable-state": "^1.0.1",
    "@radix-ui/react-use-layout-effect": "^1.0.1",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@testing-library/react": "^15.0.7",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "keywords": [
    "livepeer",
    "react",
    "video",
    "streaming",
    "livestream"
  ]
}
