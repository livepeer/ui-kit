{
  "name": "@livepeer/react",
  "description": "React primitives for video apps.",
  "license": "MIT",
  "version": "4.0.3",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/livepeer/ui-kit.git",
    "directory": "packages/react"
  },
  "homepage": "https://docs.livepeer.org",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./assets": {
      "browser": "./dist/assets/index.js",
      "import": "./dist/assets/index.js",
      "require": "./dist/assets/index.cjs"
    },
    "./broadcast": {
      "browser": "./dist/broadcast/index.js",
      "import": "./dist/broadcast/index.js",
      "require": "./dist/broadcast/index.cjs"
    },
    "./crypto": {
      "import": "./dist/crypto/index.js",
      "require": "./dist/crypto/index.cjs"
    },
    "./external": {
      "import": "./dist/external/index.js",
      "require": "./dist/external/index.cjs"
    },
    "./player": {
      "browser": "./dist/player/index.js",
      "import": "./dist/player/index.js",
      "require": "./dist/player/index.cjs"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "typesVersions": {
    "*": {
      "./assets": ["dist/assets/index.d.ts"],
      "./broadcast": ["dist/broadcast/index.d.ts"],
      "./crypto": ["dist/crypto/index.d.ts"],
      "./external": ["dist/external/index.d.ts"],
      "./player": ["dist/player/index.d.ts"],
      "*": ["dist/index.d.ts"]
    }
  },
  "scripts": {
    "build": "tsup",
    "clean": "rimraf .turbo node_modules dist",
    "dev": "tsup --watch",
    "lint": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "peerDependenciesMeta": {
    "react-dom": {
      "optional": true
    }
  },
  "dependencies": {
    "@livepeer/core": "workspace:*",
    "@livepeer/core-react": "workspace:*",
    "@livepeer/core-web": "workspace:*",
    "@radix-ui/primitive": "^1.0.1",
    "@radix-ui/react-aspect-ratio": "^1.0.3",
    "@radix-ui/react-compose-refs": "^1.0.1",
    "@radix-ui/react-context": "^1.0.1",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-portal": "^1.0.4",
    "@radix-ui/react-presence": "^1.0.1",
    "@radix-ui/react-primitive": "^1.0.3",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slider": "^1.1.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-use-controllable-state": "^1.0.1",
    "@radix-ui/react-use-layout-effect": "^1.0.1",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@testing-library/react": "^14.2.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/react": "^18.2.51",
    "@types/react-dom": "^18.2.18",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "keywords": ["livepeer", "react", "video", "streaming", "livestream"]
}
