{
  "name": "@livepeer/core",
  "description": "Livepeer UI Kit's core vanilla JS library.",
  "license": "MIT",
  "type": "module",
  "version": "3.0.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/livepeer/ui-kit.git",
    "directory": "packages/core"
  },
  "homepage": "https://docs.livepeer.org",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./crypto": {
      "import": "./dist/crypto/index.js",
      "require": "./dist/crypto/index.cjs"
    },
    "./errors": {
      "import": "./dist/errors/index.js",
      "require": "./dist/errors/index.cjs"
    },
    "./media": {
      "import": "./dist/media/index.js",
      "require": "./dist/media/index.cjs"
    },
    "./storage": {
      "import": "./dist/storage/index.js",
      "require": "./dist/storage/index.cjs"
    },
    "./utils": {
      "import": "./dist/utils/index.js",
      "require": "./dist/utils/index.cjs"
    },
    "./version": {
      "import": "./dist/version/index.js",
      "require": "./dist/version/index.cjs"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "typesVersions": {
    "*": {
      "./crypto": ["dist/crypto/index.d.ts"],
      "./errors": ["dist/errors/index.d.ts"],
      "./media": ["dist/media/index.d.ts"],
      "./storage": ["dist/storage/index.d.ts"],
      "./utils": ["dist/utils/index.d.ts"],
      "./version": ["dist/version/index.d.ts"],
      "*": ["dist/index.d.ts"]
    }
  },
  "scripts": {
    "build": "tsup",
    "clean": "rimraf .turbo node_modules dist",
    "dev": "tsup --watch",
    "lint": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": ">=17.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "dependencies": {
    "multiformats": "^13.0.1",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "jose": "^5.2.0"
  },
  "keywords": ["livepeer", "video", "streaming", "livestream"]
}
